<% if @consumer.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@consumer.errors.count, "error") %>.
      <!-- #pluralize takes an integer argument and then returns the number with
      #a properly pluralized version of its second argument. -->
    </div>
    <ul>
    <% @consumer.errors.full_messages.each do | msg | %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
